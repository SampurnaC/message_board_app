.container
  %h2 Card Header and Footer
  - @topics.each do |topic|
    .card
      .card-header
        %h4= topic.title
        
      .card-body
        %p= topic.content
      .card-footer
        %p= topic.user.email
      .card-body
        = link_to 'Show', topic
        - if current_user == topic.user
          %td= link_to 'Edit', edit_topic_path(topic)
          %td= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' }
    %br
